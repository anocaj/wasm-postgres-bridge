{
  "name": "wasm-postgres-learning",
  "version": "1.0.0",
  "description": "A step-by-step learning environment for WebAssembly and PostgreSQL connections",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:wasm": "cd wasm && wasm-pack build --target web --out-dir ../src/wasm/pkg",
    "build:wasm:node": "cd wasm && wasm-pack build --target nodejs --out-dir ../src/wasm/pkg-node",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "clean:wasm": "rm -rf src/wasm/pkg src/wasm/pkg-node",
    "start": "node dist/index.js"
  },
  "keywords": [
    "wasm",
    "postgresql",
    "websocket",
    "learning"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/pg": "^8.10.2",
    "@types/ws": "^8.5.5",
    "dotenv": "^17.2.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "pg": "^8.11.3",
    "ws": "^8.14.2"
  }
}
